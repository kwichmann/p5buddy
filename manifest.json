{
    "manifest_version": 2,
    "name": "p5 buddy",
    "version": "0.005",
    
    "content_scripts": [
        {
            "matches": ["http://editor.p5js.org/*", "https://editor.p5js.org/*"],         
            "js": ["plyr.min.js", "content.js"],
            "css": ["style.css"]
        }
    ],

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "browser_action": {
        "default_icon": "buddy.png",
        "default_title": "p5buddy"
    },

    "commands": {
        "toggleShow": {
            "suggested_key": {
                "default": "Alt+Z"
            },
            "description": "Toggles buddy window visibility"
        },
        "togglePosition": {
            "suggested_key": {
                "default": "Alt+X"
            },
            "description": "Toggles buddy window placement"
        }
    },

    "permissions": [
        "storage"
    ],

    "web_accessible_resources": [
        "buddy.html",
        "clipboard.png"
    ],

    "content_security_policy":
        "script-src 'self'; object-src 'self'"
}